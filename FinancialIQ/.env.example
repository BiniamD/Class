# GCP Configuration
PROJECT_ID=your-project-id
LOCATION=us-central1

# Document Source Configuration (choose one)
# Option 1: GCS
BUCKET_NAME=your-bucket-name
PDF_FOLDER=documents/pdfs

# Option 2: Local Directory
LOCAL_DIR=documents

# Vector Store Configuration
VECTOR_STORE_PATH=data/vector_store
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CREATE_BACKUP=true
VALIDATE_STORE=true

# Logging Configuration
LOG_DIR=logs
LOG_LEVEL=INFO

# Cache Configuration
CACHE_DIR=cache
CACHE_EXPIRY=86400  # 24 hours in seconds

# Application Default Credentials (ADC) Configuration
# Set to true if using service account credentials
USE_SERVICE_ACCOUNT=false
# Path to service account key file (if using service account)
SERVICE_ACCOUNT_KEY_PATH=path/to/service-account.json

# API Keys
GOOGLE_API_KEY=your-api-key
VERTEX_AI_API_KEY=your-vertex-ai-key

METADATA_CSV_PATH=documents/documents_sec_filings.csv

# Performance Settings
MAX_CONCURRENT_PROCESSES=4
MAX_DOCUMENTS=1000

# Security
ENABLE_AUTHENTICATION=false
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password 